<div class="blog-post-namespace">
  <%= render 'navigation' %>
  <div class="container">
  <% if @blog_posts.empty? %>
    <div class="center-text">
      <p>Nothing here! Come back later.</p>
    </div>
  <% end %>

  <% @blog_posts.each do |blog_post| %>
    <%= render partial: "blog_posts/blog_post.html.erb", locals: { blog_post: blog_post } %>
  <% end %>
  </div>
</div>
